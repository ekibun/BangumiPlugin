<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:elevation="100dp">
    <View
            android:id="@+id/hide_danmaku_panel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
    />
    <androidx.core.widget.NestedScrollView
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:background="#aa000000"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            android:orientation="vertical"
            android:descendantFocusability="blocksDescendants">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:padding="8dp"
                      android:text="按类型屏蔽"
                      android:textSize="@dimen/textSizeMedium"/>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView android:id="@+id/danmaku_top"
                          android:layout_width="0dp"
                          android:layout_height="wrap_content"
                          android:layout_weight="1"
                          android:padding="8dp"
                          android:textAlignment="center"
                          android:text="顶部"
                          android:textSize="@dimen/textSizeSmall"/>
                <TextView android:id="@+id/danmaku_scroll"
                          android:layout_width="0dp"
                          android:layout_height="wrap_content"
                          android:layout_weight="1"
                          android:padding="8dp"
                          android:textAlignment="center"
                          android:text="滚动"
                          android:textSize="@dimen/textSizeSmall"/>
                <TextView android:id="@+id/danmaku_bottom"
                          android:layout_width="0dp"
                          android:layout_height="wrap_content"
                          android:layout_weight="1"
                          android:padding="8dp"
                          android:textAlignment="center"
                          android:text="底部"
                          android:textSize="@dimen/textSizeSmall"/>
                <TextView android:id="@+id/danmaku_special"
                          android:layout_width="0dp"
                          android:layout_height="wrap_content"
                          android:layout_weight="1"
                          android:padding="8dp"
                          android:textAlignment="center"
                          android:text="特殊"
                          android:textSize="@dimen/textSizeSmall"/>
            </LinearLayout>
            <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorTransGrey"/>
            <TextView android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:padding="8dp"
                      android:text="弹幕设置"
                      android:textSize="@dimen/textSizeMedium"/>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/textSizeSmall"
                        android:ellipsize="end"
                        android:paddingBottom="4dp"
                        android:text="不透明度"
                        android:maxLines="1"/>

                <SeekBar
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/danmaku_opac_seek"
                        android:layout_weight="1"
                        android:max="100"
                        android:progress="100"/>
                <TextView
                        android:id="@+id/danmaku_opac_value"
                        android:layout_width="35dp"
                        android:textAlignment="center"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/textSizeSmall"
                        android:paddingBottom="4dp"
                        android:text="100%"
                        android:maxLines="1"/>
            </LinearLayout>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/textSizeSmall"
                        android:ellipsize="end"
                        android:paddingBottom="4dp"
                        android:text="弹幕字号"
                        android:maxLines="1"/>

                <SeekBar
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/danmaku_size_seek"
                        android:layout_weight="1"
                        android:progress="50"
                        android:max="150"/>
                <TextView
                        android:id="@+id/danmaku_size_value"
                        android:layout_width="35dp"
                        android:textAlignment="center"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/textSizeSmall"
                        android:paddingBottom="4dp"
                        android:text="100%"
                        android:maxLines="1"/>
            </LinearLayout>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/textSizeSmall"
                        android:ellipsize="end"
                        android:paddingBottom="4dp"
                        android:text="显示区域"
                        android:maxLines="1"/>
                <SeekBar
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/danmaku_loc_seek"
                        android:layout_weight="1"
                        android:progress="3"
                        android:max="4"/>
                <TextView
                        android:id="@+id/danmaku_loc_value"
                        android:layout_width="35dp"
                        android:textAlignment="center"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/textSizeSmall"
                        android:paddingBottom="4dp"
                        android:text="100%"
                        android:maxLines="1"/>
            </LinearLayout>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/textSizeSmall"
                        android:ellipsize="end"
                        android:paddingBottom="4dp"
                        android:text="弹幕速度"
                        android:maxLines="1"/>
                <SeekBar
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/danmaku_speed_seek"
                        android:layout_weight="1"
                        android:progress="2"
                        android:max="4"/>
                <TextView
                        android:id="@+id/danmaku_speed_value"
                        android:layout_width="35dp"
                        android:textAlignment="center"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/textSizeSmall"
                        android:paddingBottom="4dp"
                        android:text="100%"
                        android:maxLines="1"/>
            </LinearLayout>
            <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorTransGrey"/>
            <TextView android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:padding="8dp"
                      android:text="画面尺寸"
                      android:textSize="@dimen/textSizeMedium"/>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView android:id="@+id/video_frame_auto"
                          android:layout_width="0dp"
                          android:layout_height="wrap_content"
                          android:layout_weight="1"
                          android:padding="8dp"
                          android:textAlignment="center"
                          android:text="适应"
                          android:textSize="@dimen/textSizeSmall"/>
                <TextView android:id="@+id/video_frame_stretch"
                          android:layout_width="0dp"
                          android:layout_height="wrap_content"
                          android:layout_weight="1"
                          android:padding="8dp"
                          android:textAlignment="center"
                          android:text="拉伸"
                          android:textSize="@dimen/textSizeSmall"/>
                <TextView android:id="@+id/video_frame_fill"
                          android:layout_width="0dp"
                          android:layout_height="wrap_content"
                          android:layout_weight="1"
                          android:padding="8dp"
                          android:textAlignment="center"
                          android:text="填充"
                          android:textSize="@dimen/textSizeSmall"/>
                <TextView android:id="@+id/video_frame_16_9"
                          android:layout_width="0dp"
                          android:layout_height="wrap_content"
                          android:layout_weight="1"
                          android:padding="8dp"
                          android:textAlignment="center"
                          android:text="16:9"
                          android:textSize="@dimen/textSizeSmall"/>
                <TextView android:id="@+id/video_frame_4_3"
                          android:layout_width="0dp"
                          android:layout_height="wrap_content"
                          android:layout_weight="1"
                          android:padding="8dp"
                          android:textAlignment="center"
                          android:text="4:3"
                          android:textSize="@dimen/textSizeSmall"/>
            </LinearLayout>
            <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorTransGrey"/>
            <TextView android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:padding="8dp"
                      android:text="弹幕池"
                      android:textSize="@dimen/textSizeMedium"/>
            <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/item_danmaku_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:listitem="@layout/item_provider">
            </androidx.recyclerview.widget.RecyclerView>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>