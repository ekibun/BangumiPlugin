<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:background="#5000"
        android:visibility="invisible"
        tools:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <me.qinc.lib.edgetranslucent.EdgeTransparentView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="?attr/actionBarSize"
            app:edge_position="top|bottom"
            app:edge_width="30dp"
            app:layout_constraintBottom_toTopOf="@+id/ctr_layout"
            app:layout_constraintTop_toTopOf="parent">
        <me.wcy.lrcview.LrcView
                android:id="@+id/lrc_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:lrcAnimationDuration="500"
                app:lrcCurrentTextColor="#fff"
                app:lrcDividerHeight="20dp"
                app:lrcNormalTextColor="#8fff"
                app:lrcNormalTextSize="15sp"
                app:lrcPadding="16dp"
                app:lrcTextGravity="center"
                app:lrcTextSize="15sp"
                app:lrcTimeTextColor="#8fff"
                app:lrcTimelineColor="#8fff"
                app:lrcTimelineTextColor="#8fff"/>
    </me.qinc.lib.edgetranslucent.EdgeTransparentView>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:orientation="vertical"
            android:id="@+id/ctr_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:layout_constraintBottom_toBottomOf="parent">
        <TextView android:textSize="12sp"
                  android:textColor="@android:color/white"
                  android:gravity="end"
                  android:layout_gravity="center"
                  android:id="@+id/ctr_time"
                  android:layout_width="50dp"
                  android:layout_height="wrap_content"
                  tools:text="00:00"
                  app:layout_constraintLeft_toLeftOf="parent"
                  app:layout_constraintTop_toTopOf="parent"/>
        <TextView android:textSize="12sp"
                  android:textColor="@android:color/white"
                  android:gravity="start"
                  android:layout_gravity="center"
                  android:id="@+id/ctr_total_time"
                  android:layout_width="50dp"
                  android:layout_height="wrap_content"
                  tools:text="00:00"
                  app:layout_constraintRight_toRightOf="parent"
                  app:layout_constraintTop_toTopOf="parent"/>
        <SeekBar android:id="@+id/ctr_seek"
                 android:layout_width="0dp"
                 android:layout_height="wrap_content"
                 app:layout_constraintBottom_toBottomOf="@+id/ctr_time"
                 app:layout_constraintLeft_toRightOf="@+id/ctr_time"
                 app:layout_constraintRight_toLeftOf="@+id/ctr_total_time"
                 app:layout_constraintTop_toTopOf="@+id/ctr_time"/>
        <LinearLayout android:gravity="center"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginTop="4dp"
                      app:layout_constraintLeft_toLeftOf="parent"
                      app:layout_constraintRight_toRightOf="parent"
                      app:layout_constraintTop_toBottomOf="@+id/ctr_time">
            <ImageButton android:id="@+id/ctr_repeat"
                         android:background="?attr/selectableItemBackgroundBorderless"
                         android:padding="6dp"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:layout_margin="4dp"
                         android:src="@drawable/ic_repeat"/>
            <ImageButton android:id="@+id/ctr_prev"
                         android:background="?attr/selectableItemBackgroundBorderless"
                         android:padding="6dp"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:layout_margin="4dp"
                         android:src="@drawable/ic_prev"/>
            <ImageButton android:id="@+id/ctr_pause"
                         android:background="@drawable/bg_round_rect_outline"
                         android:padding="12dp"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:layout_margin="4dp"
                         android:src="@drawable/ic_play"
                         android:tint="@android:color/white"
                         android:backgroundTint="@android:color/white"/>
            <ImageButton android:id="@+id/ctr_next"
                         android:background="?attr/selectableItemBackgroundBorderless"
                         android:padding="6dp"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:layout_margin="4dp"
                         android:src="@drawable/ic_next"/>
            <ImageButton android:id="@+id/ctr_info"
                         android:background="?attr/selectableItemBackgroundBorderless"
                         android:padding="6dp"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:layout_margin="4dp"
                         android:src="@drawable/ic_menu"/>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>